{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "./tsconfig.json"
  },
  "monorepo": true,
  "root": "apps",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "composer": {
      "type": "application",
      "root": "apps/composer",
      "entryFile": "main",
      "sourceRoot": "apps/composer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/composer/tsconfig.app.json"
      }
    }
  }
}
