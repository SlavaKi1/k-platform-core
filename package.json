{
  "name": "k-platform-core",
  "version": "0.0.1",
  "description": "One framework for all things",
  "author": "Alexander Kiriliuk",
  "license": "Apache-2.0",
  "scripts": {
    "format": "prettier --write \"modules/**/*.ts\" \"app/**/*.ts\" \"libs/**/*.ts\"",
    "init": "npm run init:config && npm run init:web-app",
    "init:config": "nest start init-config",
    "init:web-app": "nest start init-web-app",
    "build:web-app": "nest build web-app",
    "start:config": "nest start config",
    "start:config:dev": "nest start config --watch",
    "start:config:debug": "nest start config --debug --watch",
    "start:web-app": "nest start web-app",
    "start:web-app:dev": "nest start web-app --watch",
    "start:web-app:debug": "nest start web-app --debug --watch",
    "start:web-app:prod": "node dist/app/web/main",
    "lint": "eslint \"{src,app,modules,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,app,modules,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config web/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "3.0.2",
    "@nestjs/common": "10.3.7",
    "@nestjs/core": "10.3.7",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/microservices": "10.3.7",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.3.7",
    "@nestjs/schedule": "4.0.1",
    "@nestjs/serve-static": "4.0.2",
    "adm-zip": "0.5.12",
    "axios": "1.6.8",
    "bcrypt": "5.1.1",
    "canvas": "2.11.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cookie-parser": "1.4.6",
    "dotenv": "16.4.5",
    "exifreader": "4.21.1",
    "ffprobe": "1.1.2",
    "ffprobe-static": "3.1.0",
    "file-type": "19.0.0",
    "heic-convert": "2.1.0",
    "helmet": "7.1.0",
    "imagemin": "7.0.1",
    "imagemin-mozjpeg": "9.0.0",
    "imagemin-pngquant": "9.0.2",
    "ioredis": "5.3.2",
    "jwt-simple": "0.5.6",
    "multer": "1.4.5-lts.1",
    "music-metadata": "7.14.0",
    "mysql2": "3.9.3",
    "node-redis-warlock": "1.0.2",
    "object-hash": "3.0.0",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "sharp": "0.33.3",
    "typeorm": "0.3.20",
    "uuid": "9.0.1",
    "xml2js": "0.6.2"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "10.1.1",
    "@nestjs/testing": "10.3.7",
    "@nestjs/typeorm": "10.0.2",
    "@types/adm-zip": "0.5.5",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/multer": "1.4.11",
    "@types/node": "20.12.2",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.3"
  },
  "jest": {
    "moduleNameMapper": {
      "^@config/(.*)$": "<rootDir>/modules/config/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@user/(.*)$": "<rootDir>/modules/user/$1",
      "^@media/(.*)$": "<rootDir>/modules/media/$1",
      "^@file/(.*)$": "<rootDir>/modules/file/$1",
      "^@xml-data-bridge/(.*)$": "<rootDir>/modules/xml-data-bridge/$1",
      "^@explorer/(.*)$": "<rootDir>/modules/explorer/$1",
      "^@auth/(.*)$": "<rootDir>/modules/auth/$1",
      "^@captcha/(.*)$": "<rootDir>/modules/captcha/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "coveragePathIgnorePatterns": [
      ".mock.ts",
      ".e2e-spec.ts",
      ".module.ts",
      ".entity.ts",
      ".subscriber.ts",
      "main.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/"
    ]
  }
}
