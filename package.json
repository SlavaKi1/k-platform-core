{
  "name": "k-platform-core",
  "version": "0.0.1",
  "description": "One framework for all things",
  "author": "Alexander Kiriliuk",
  "license": "Apache-2.0",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"modules/**/*.ts\" \"app/**/*.ts\" \"libs/**/*.ts\"",
    "init:config": "nest start init-config",
    "init:web-app": "nest start init-web-app",
    "start:config": "nest start config",
    "start:config:dev": "nest start config --watch",
    "start:config:debug": "nest start config --debug --watch",
    "start:web-app": "nest start web-app",
    "start:web-app:dev": "nest start web-app --watch",
    "start:web-app:debug": "nest start web-app --debug --watch",
    "start:web-app:prod": "node dist/web/src/main",
    "lint": "eslint \"{src,app,modules,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,app,modules,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config web/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "10.1.3",
    "@nestjs/core": "10.1.3",
    "@nestjs/jwt": "10.1.0",
    "@nestjs/microservices": "10.1.3",
    "@nestjs/passport": "10.0.0",
    "@nestjs/platform-express": "10.1.3",
    "@nestjs/serve-static": "^4.0.0",
    "bcrypt": "5.1.0",
    "canvas": "2.11.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "cookie-parser": "1.4.6",
    "dotenv": "16.3.1",
    "helmet": "7.0.0",
    "imagemin": "7.0.1",
    "imagemin-mozjpeg": "9.0.0",
    "imagemin-pngquant": "8.0.0",
    "ioredis": "5.3.2",
    "jwt-simple": "0.5.6",
    "multer": "1.4.5-lts.1",
    "mysql2": "3.6.3",
    "object-hash": "3.0.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "pg": "8.11.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "sharp": "0.32.1",
    "typeorm": "0.3.17",
    "uuid": "9.0.0",
    "xml2js": "0.6.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.11",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.1.3",
    "@nestjs/typeorm": "10.0.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.2",
    "@types/multer": "1.4.7",
    "@types/node": "18.16.0",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "prettier": "2.8.8",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3"
  },
  "jest": {
    "moduleNameMapper": {
      "^@config/(.*)$": "<rootDir>/modules/config/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@user/(.*)$": "<rootDir>/modules/user/$1",
      "^@media/(.*)$": "<rootDir>/modules/media/$1",
      "^@file/(.*)$": "<rootDir>/modules/file/$1",
      "^@xml-data-bridge/(.*)$": "<rootDir>/modules/xml-data-bridge/$1",
      "^@explorer/(.*)$": "<rootDir>/modules/explorer/$1",
      "^@auth/(.*)$": "<rootDir>/modules/auth/$1",
      "^@captcha/(.*)$": "<rootDir>/modules/captcha/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "coveragePathIgnorePatterns": [
      ".mock.ts",
      ".e2e-spec.ts",
      ".module.ts",
      ".entity.ts",
      ".subscriber.ts",
      "main.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/"
    ]
  }
}
